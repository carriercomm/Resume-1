<div id = "wrapper">
<div id ="page">
<h1>New Personal Details</h1>

<% form_for(@personal) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :dob %><br />
